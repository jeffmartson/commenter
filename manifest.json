{
    "manifest_version": 2,
    "name": "The Commenter",
    "version": "1",
    "description": "Searches the comments for the current tab's url",
    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "*://hn.algolia.com/*",
        "*://www.reddit.com/*"
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "48": "icons/48.png",
            "96": "icons/96.png"
        },
        "default_title": "The commenter",
        "default_popup": "popup/commenter.html"
    },
    "background": {
        "scripts": [
            "./dist/bundle.js"
        ]
    },
    "applications": {
        "gecko": {
            "id": "commenter.extension@viorel.me"
        }
    }
}
